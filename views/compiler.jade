extends layout

block content
  .contents
    .sideBar
      .sideBar__section#fileStaticExample
        .sideBar__item Ejemplos por defecto
        .sideBar__item.selected.example Example 1
        .sideBar__item.example Example 2
      .sideBar__section
        .sideBar__item Ejemplos guardados
        #fileServerExample

    div
      .contents
        .leftCode
          .contents
            .rightAlign
              p Introduce algún código
            .leftAlign
              button(type="button").btn#load Load 
              button(type="button").btn#run Run 
            
          #editor.codeEditor
        .rightTree
          p Arbol generado:
          #treeGenerate
      .results
        h3 Código generado
        #resultCode.codeEditor
        
        
      

